<h1>Sign Up</h1>
<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :position %>
<%= f.text_field :position%>

<%= f.label :password %>
<%= f.password_field :password%>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>

<%= f.submit "Create Account" %>
<% end %>
