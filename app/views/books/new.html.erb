<% provide(:title, "Book") %>
<div class= row>
<div class= "medium-6 columns medium-offset-3">
<h1> Add Books </h1>
        <%= form_for @book do |f| %>
        
        <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>
    
    <%= f.label :category %>
    <%= f.text_field :category %>
    
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
    
    <%=  f.label :publisher %>
    <%=  f.text_field :publisher %>
    
    <%= f.submit "Save" %>
<% end %>
</div>
</div>
